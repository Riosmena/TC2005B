<%- include('includes/head.ejs') %>

    <div class="container">
        <h1>Configura tu Jeep</h1>
        <form action="/autos/configurar" method="POST">
            <div class="row">
                <div class="input-field col s6">
                    <input id="version" type="text" style=color:white class="validate" name="version">
                    <label for="version">Version</label>
                </div>
                <div class="input-field col s6">
                    <input id="color" type="text" style=color:white class="validate" name="color">
                    <label for="color">Color</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <input id="nombre" type="text" style=color:white class="validate" name="nombre">
                    <label for="nombre">Nombre</label>
                </div>
                <div class="input-field col s6">
                    <input id="apellido" type="text" style=color:white class="validate" name="apellido">
                    <label for="apellido">Apellido</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <input id="correo" type="email" style=color:white class="validate" name="correo">
                    <label for="correo">Correo electrónico</label>
                </div>
                <div class="input-field col s6">
                    <input id="telefono" type="text" style=color:white class="validate" name="telefono">
                    <label for="telefono">Teléfono</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <input id="estado" type="text" style=color:white class="validate" name="estado">
                    <label for="estado">Estado</label>
                </div>
                <div class="input-field col s6">
                    <input id="cotizacion" type="text" style=color:white class="validate" name="cotizacion">
                    <label for="cotizacion">Tipo de cotización</label>
                </div>
            </div>
            <button class="btn waves-effect waves-light" type="submit" name="action">Confirmar
                <i class="material-icons right">send</i>
            </button>
        </form>
        <br><br>
    </div>

<%- include('includes/foot.ejs') %>